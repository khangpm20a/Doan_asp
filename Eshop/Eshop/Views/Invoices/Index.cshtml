@model IEnumerable<Eshop.Models.Invoice>

@{
    ViewData["Title"] = "Index";
    Layout = "_admin";
}

   <div class="container-fluid">
        <h1 class="mt-4">Danh Sach Hóa Đơn</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active">Danh Sách Hóa Đơn</li>
        </ol>
        <div class="card mb-12">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6 col-xs-12">
                       
                    </div>
                   @* <div class="col-md-6 col-xs-12">
                        <form asp-action="Index" method="get">
                            <div class="row">
                                <div class="col-md-9">
                                    <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                                </div>
                                <div class="cold-md-3">
                                    <button type="submit" class="btn btn-primary" >Tìm</button>
                                    <button type="button" onclick="window.location.href='/User/Index'" class="btn btn-dark">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>*@
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                @if (ViewBag.SuccessMsg != null)
                {
                    <div id="msgAlert" class="alert alert-success" role="alert">
                        @ViewBag.SuccessMsg
                    </div>
                }
            </div>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Account)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IssuedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShippingAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShippingPhone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Total)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                             <th>
                                Function
                            </th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Account.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IssuedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShippingAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShippingPhone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                               
                                <td>
                                    
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}












